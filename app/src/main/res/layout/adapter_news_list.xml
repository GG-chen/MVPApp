<?xml version="1.0" encoding="utf-8"?>
<com.chen.mvp.widget.RippleView
    android:id="@+id/item_ripple"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_listMode="true"
    app:rv_rippleDuration="1000"
    android:background="?attr/custom_backgroud"
    app:rv_type="rectangle">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp75"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@android:color/holo_blue_light"/>

    <com.flyco.labelview.LabelView
        android:id="@+id/label_view"
        xmlns:lv="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        lv:lv_fill_triangle="true"
        lv:lv_text_size="11sp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_icon"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:maxLines="2"
        android:text="里约奥运会"
        android:textColor="?attr/custom_textcolor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="网易原创"
        android:textColor="?attr/custom_textcolor"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_source"
        android:layout_marginRight="10dp"
        android:textColor="?attr/custom_textcolor"
        android:text="2016-08-23 11:48:46"/>
</com.chen.mvp.widget.RippleView>